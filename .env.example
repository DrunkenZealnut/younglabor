# ==================================================
# PROJECT CONFIGURATION (Change these for new projects)
# ==================================================

# Project Identity
PROJECT_NAME="ORGANIZATION_PROJECT"
PROJECT_SLUG=organization
PROJECT_VERSION=1.0.0

# Organization Information
ORG_NAME_SHORT="Organization"
ORG_NAME_FULL="Organization Full Name"
ORG_NAME_EN="ORG"
ORG_DESCRIPTION="Organization description and mission statement"

# Domain & URL Configuration
PRODUCTION_DOMAIN=organization.org
PRODUCTION_URL=https://organization.org
LOCAL_PORT=8080

# ==================================================
# APPLICATION CONFIGURATION (Auto-configured)
# ==================================================

# Application Configuration
APP_NAME="${ORG_NAME_SHORT}"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:${LOCAL_PORT}/${PROJECT_SLUG}
BASE_PATH=/${PROJECT_SLUG}

# Site Configuration
DEFAULT_SITE_NAME="${ORG_NAME_FULL}"
DEFAULT_SITE_DESCRIPTION="${ORG_DESCRIPTION}"
DEFAULT_ADMIN_EMAIL=admin@organization.org

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=${PROJECT_SLUG}
DB_USERNAME=root
DB_PASSWORD=""
# Database connection will auto-detect environment (XAMPP/Linux/Production)
# XAMPP users: connection will use socket automatically
# Production servers: connection will use TCP automatically
DB_PREFIX=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Security Settings
SESSION_LIFETIME=7200
SESSION_TIMEOUT=1800
CSRF_TOKEN_LIFETIME=3600

# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=data/file
UPLOAD_URL=data/file
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,hwp,hwpx,xls,xlsx,txt

# Theme Settings
THEME_NAME=natural-green
THEME_PRIMARY_COLOR=#84cc16
THEME_SECONDARY_COLOR=#16a34a
THEME_SUCCESS_COLOR=#65a30d
THEME_INFO_COLOR=#3a7a4e
THEME_WARNING_COLOR=#a3e635
THEME_DANGER_COLOR=#dc2626
THEME_LIGHT_COLOR=#fafffe
THEME_DARK_COLOR=#1f3b2d

# Logging
LOG_LEVEL=info
LOG_PATH=logs/

# Database Table Settings  
DB_TABLE_PREFIX=${PROJECT_SLUG}_

# Contact Information
CONTACT_EMAIL=${ORG_NAME_EN}contact@${PRODUCTION_DOMAIN}
CONTACT_PHONE=
BANK_ACCOUNT_HOLDER="${ORG_NAME_FULL}"

# Email SMTP Settings
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USERNAME=your-email@gmail.com
MAIL_SMTP_PASSWORD=your-app-password
MAIL_FROM_EMAIL=your-email@gmail.com
MAIL_FROM_NAME="${ORG_NAME_SHORT} 웹사이트"
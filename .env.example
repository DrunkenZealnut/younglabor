# 희망씨 웹사이트 환경 설정
# 실제 사용 시 .env 파일로 복사하여 사용하세요

# 애플리케이션 설정
APP_NAME="희망씨"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8081

# 데이터베이스 설정
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=hopec
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# 데이터베이스 프리픽스 (레거시 호환)
LEGACY_DB_PREFIX=g5_
MODERN_DB_PREFIX=hopec_

# 보안 설정
SESSION_DRIVER=file
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# CSRF 보안
CSRF_TOKEN_NAME=hopec_csrf_token
CSRF_LIFETIME=3600

# 파일 업로드 설정
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx,hwp,hwpx,xls,xlsx

# 로깅 설정
LOG_LEVEL=debug
ENABLE_QUERY_LOG=true
LOG_PATH=logs

# 메일 설정 (추후 확장용)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# 외부 서비스 (추후 확장용)
GOOGLE_ANALYTICS_ID=
FACEBOOK_APP_ID=

# 성능 설정
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# 디버그 설정 (개발 환경만)
QUERY_DEBUG=true
TEMPLATE_DEBUG=true
ERROR_DISPLAY=true